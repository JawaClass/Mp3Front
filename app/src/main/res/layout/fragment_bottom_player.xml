<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3c3c">

    <SeekBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignBottom="@+id/btn_toggle_play_pause"
        android:layout_toEndOf="@+id/btn_toggle_play_pause"
        android:layout_toRightOf="@+id/btn_toggle_play_pause"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/btn_toggle_play_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ToggleButton"
        android:textOff="Pause"
        android:textOn="Play"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="443dp" />

</RelativeLayout>